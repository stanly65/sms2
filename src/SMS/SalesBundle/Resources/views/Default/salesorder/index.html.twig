{% extends 'base.html.twig' %}

{% block title %}Order list{% endblock %}

{% block body %}
    <h1>Order list</h1>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Total price</th>
            <th>Status</th>
            <th>Created at</th>
            <th>Customer email</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for salesOrder in salesOrders %}
            <tr>
                <td><a href="{{ path('salesorder_show', { 'id': salesOrder.id }) }}">{{ salesOrder.id }}</a></td>
                <td>{{ salesOrder.totalPrice }} лв</td>
                <td>{{ salesOrder.status }}</td>
                <td>{% if salesOrder.createdAt %}{{ salesOrder.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ salesOrder.userEmail }}</td>
                <td>{{ salesOrder.userFirstName }}</td>
                <td>{{ salesOrder.userLastName }}</td>
                <td>
                    <a href="{{ path('salesorder_show', { 'id': salesOrder.id }) }}">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                    &emsp;
                    <a href="{{ path('salesorder_edit', { 'id': salesOrder.id }) }}">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
